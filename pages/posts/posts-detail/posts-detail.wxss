.container {
    display: flex;
    flex-direction: column;
}

.detial-author {
    margin-top: 15px;
    margin-left: 24rpx;
}

.detial-img {
    width: 64rpx;
    height: 64rpx;
    vertical-align: middle;
    border-radius: 50%;
}

.auth {
    font-size: 30rpx;
    margin-left: 20rpx;
    vertical-align: middle;
    font-weight: 300;
    color: #666;
}

.const-text {
    color: #999;
    margin-left: 20rpx;
    /* vertical-align: middle; */
    font-size: 24rpx;
}

.date {
    color: #999;
    margin-left: 30rpx;
    font-size: 24rpx;
    vertical-align: middle;
}

.tool-img {
    float: right;
    margin-right: 20rpx;
}

.tool_child_img {
    width: 80rpx;
    height: 80rpx;
}

.middle-line {
    width: 700rpx;
    height: 2px;
    background: #e5e5e5;
    position: relative;
    margin: 0 auto;
    vertical-align: middle;
    top: 43rpx;
    z-index: -99;
}

.title {
    font-weight: 700;
    font-size: 36rpx;
    margin-left: 28rpx;
}

.detail {
    width: 92%; 
    color: #666;
    line-height: 26px;
    margin: 20px auto;
    letter-spacing: 2px;
}

 .music-player {
    top: 1px;
    left: 1px;
    float: left;
    position: absolute;
    width: 64rpx;
    height: 64rpx;
} 

.music-image {
    width: 100%;
    height: 100%;
}